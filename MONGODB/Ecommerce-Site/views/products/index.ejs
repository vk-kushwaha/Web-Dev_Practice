
<%-include('../partials/header')%>    
<%-include('../partials/Navbar')%>
<%-include('../partials/flash')%>    

    <div class="container-fluid m-5 row p-5 mx-auto ">
        <h1 class="heading">Showing All Products</h1>
    
        <% for(let item of products){ %>
            <div class="col-12 col-md-6 col-md-4 col-lg-3  product-card">
                <div class="card text-center shadow mt-3 mx-auto  " style="width: 21rem;">
                    <img class="img card-img-top " src="<%= item.img %>" alt="Product Image">
                    <div class="card-body">
                        <h3 class="card-title"> <%= item.name %> </h3>
                        <span class="btn like-btn" product-id="<%= item._id %>">
                            <% if(currentUser && currentUser.wishlist.includes(item._id)){ %>
                                <i class="fa-solid fa-heart"></i>
                            <% }else{ %>
                                <i class="fa-regular fa-heart"></i>
                            <% } %>
                        </span>
                        <h5 class="card-title"> Rs: <%= item.price %> </h5>
                        <p class="card-text"> <%= item.desc %> </p>
                        <a href="/products/<%= item._id %>" class="btn btnn btn-primary">View More</a>
                    </div>
                </div>
            </div>
        <% } %>
    </div>

    <script src="/JS/common.js"></script>

<%-include('../partials/footer')%>
