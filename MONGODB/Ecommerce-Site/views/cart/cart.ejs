 <%-include('../partials/header')%>
 <%-include('../partials/Navbar')%>
<%-include('../partials/flash')%>   



<section class="container">
    <h1 class="display-6 fw-bold"> My Cart</h1>

    <div class="row">
        <div class="col-lg-8">
            <% for (const item of user.cart) { %>
                <div class="card mx-auto m-3 border">
                    <div class="row g-0">
                        <div class="col-md-4 col-lg-3">
                            <img class="card-img-top rounded-start" src="<%= item.img %>" alt="<%= item.name %>">
                        </div>

                        <div class="col-md-8 col-lg-9">
                            <div class="card-body">
                                <h5 class="card-title"><%= item.name %></h5>
                                <h5 class="card-title">&#8377; <%= item.price %></h5>
                                <p class="card-text"><%= item.desc %></p>
                            </div>
                            <div class="d-flex justify-content-center m-3">
                              <form class="d-inline-block" action="/user/<%= item._id %>?_method=DELETE" method="POST">
                                <button class="btn btn-sm btn-danger  m-2"><i class="fa-regular fa-trash-can p-1"></i>Remove</button>
                            </form>
                               <a href=""> <button class="btn btn-sm btn-success m-2">Buy This</button></a>
                            </div>
                        </div>
                    </div>
                </div>
           <% } %>
        </div>
        <div class="mt-5 col-lg-4">
            <ul class="list-unstyled">
                <% for (const item of user.cart) { %>
                    <li><span><%= item.name %> - &#8377; <%= item.price %></span></li>
                <% } %>
                <h3 class="mt-3"><b>Total Amount: &#8377; <%= totalAmount %></b></h3>
            </ul>
            <button class="btn btn-sm btn-success">Checkout</button>
        </div>
    </div>
</section>



 <%-include('../partials/footer')%>
